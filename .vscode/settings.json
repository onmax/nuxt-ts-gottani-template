{
  "editor.tabSize": 2,

  // path-autocomplete settings
  "path-autocomplete.pathMappings": {
    "~": "${folder}",
    "@": "${folder}"
  },

  // disable default validator
  "css.validate": false,
  "scss.validate": false,

  // enable stylelint (Please install `hex-ci.stylelint-plus` in your VSCode)
  "stylelint.autoFixOnSave": true,
  "[css]": {
    "editor.formatOnSave": false
  },
  "[scss]": {
    "editor.formatOnSave": false
  },

  // eslint, vetur settings
  "eslint.validate": [
    "javascript",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": false,
}
